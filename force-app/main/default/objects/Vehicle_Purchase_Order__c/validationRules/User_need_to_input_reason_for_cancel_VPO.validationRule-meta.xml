<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>User_need_to_input_reason_for_cancel_VPO</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL( Stage__c , &quot;Cancelled&quot;),ISBLANK( Cancellation_Reason__c ))</errorConditionFormula>
    <errorDisplayField>Cancellation_Reason__c</errorDisplayField>
    <errorMessage>Please input cancellation reason.</errorMessage>
</ValidationRule>
