<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Payment_and_Receipt_Amt_must_be_the_same</fullName>
    <active>true</active>
    <errorConditionFormula>Payment_Amount__c  &lt;&gt;  Payment_Receipt__r.Receipt_Amount__c</errorConditionFormula>
    <errorDisplayField>Payment_Amount__c</errorDisplayField>
    <errorMessage>Payment Amount must be the same as Receipt Amount on Payment Receipt.</errorMessage>
</ValidationRule>
