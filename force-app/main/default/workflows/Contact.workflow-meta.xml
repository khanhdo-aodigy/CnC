<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>MobileUpdateConfirmation</fullName>
        <description>MobileUpdateConfirmation</description>
        <protected>false</protected>
        <recipients>
            <field>Email</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>et4ae5__ExactTarget/JCC_Mobile_Update_Confirmation</template>
    </alerts>
    <alerts>
        <fullName>UpdateAddress</fullName>
        <description>UpdateAddress</description>
        <protected>false</protected>
        <recipients>
            <field>Email</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>et4ae5__ExactTarget/JCC_Address_Update_Confirmation</template>
    </alerts>
    <rules>
        <fullName>EmailAlert_AddressUpdate</fullName>
        <actions>
            <name>UpdateAddress</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <formula>IF(AND (ISPICKVAL(Contact_Update_Source__c,&quot;API&quot;),( OR(  ISCHANGED(Address_Line_1__c),  ISCHANGED(Address_Line_2__c),  ISCHANGED(Address_Line_3__c ),  ISCHANGED(Address_Line_4__c),  ISCHANGED(Address_Line_5__c)  ))),true,false)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>EmailAlert_MobileUpdate</fullName>
        <actions>
            <name>MobileUpdateConfirmation</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <formula>if(AND(ISPICKVAL(Contact_Update_Source__c,&quot;API&quot;),ISCHANGED(MobilePhone)),true,false)</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
