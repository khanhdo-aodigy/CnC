    <rules>
        <fullName>Lock Case Record when CLOSED</fullName>
        <actions>
            <name>Update_Record_Locked</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>ISPICKVAL(Status , &quot;Closed&quot;)
	&amp;&amp;  Survey_Type__c &lt;&gt; &quot;SFU&quot;
	&amp;&amp; NOT( $Setup.Bypass_Automation_Settings__c.Bypass_Workflows__c )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
