<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>CreatedBy</field>
        <field>Currency_Code__c</field>
        <field>Franchise_Code__c</field>
        <field>LastModifiedBy</field>
        <field>PO_Approved_Date__c</field>
        <field>Production_Month__c</field>
        <field>Stage__c</field>
        <field>Supplier_Account__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>royston.soh@cyclecarriage.com.sg</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Sales Director 1</label>
        <name>Sales_Director_1</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>dawn.pan@cyclecarriage.com.sg</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Sales Director 2</label>
        <name>Sales_Director_2</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>All Vehicle Purchase Orders must be approved by the Sales Directors.</description>
    <emailTemplate>Purchase_Requisition_Emails/Request_for_Approval_Email</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 4 AND 5 AND 6</booleanFilter>
        <criteriaItems>
            <field>Vehicle_Purchase_Order__c.Franchise_Code__c</field>
            <operation>notEqual</operation>
            <value>DPSEU</value>
        </criteriaItems>
        <criteriaItems>
            <field>Vehicle_Purchase_Order__c.Franchise_Code__c</field>
            <operation>notEqual</operation>
            <value>DPSEUCV</value>
        </criteriaItems>
        <criteriaItems>
            <field>Vehicle_Purchase_Order__c.Franchise_Code__c</field>
            <operation>notEqual</operation>
            <value>DPSJP</value>
        </criteriaItems>
        <criteriaItems>
            <field>Vehicle_Purchase_Order__c.Franchise_Code__c</field>
            <operation>notEqual</operation>
            <value>DPSJPCV</value>
        </criteriaItems>
        <criteriaItems>
            <field>Vehicle_Purchase_Order__c.Franchise_Code__c</field>
            <operation>notEqual</operation>
            <value>DPSUS</value>
        </criteriaItems>
        <criteriaItems>
            <field>Vehicle_Purchase_Order__c.Franchise_Code__c</field>
            <operation>notEqual</operation>
            <value>DPSUSCV</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Send_Approval_Email</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Stage_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_PO_Approved_Date</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Send_Rejection_Email</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Stage_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Request_Submitted</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Stage_to_Submitted_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Vehicle Purchase Order Approval Process</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Stage_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
