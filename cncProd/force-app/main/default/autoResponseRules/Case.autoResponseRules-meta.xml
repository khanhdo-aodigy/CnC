<?xml version="1.0" encoding="UTF-8"?>
<AutoResponseRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <autoResponseRule>
        <fullName>Auto Response to Email-To-Case</fullName>
        <active>true</active>
        <ruleEntry>
            <formula>AND(or (text(Origin) = &apos;Email&apos;,text(Origin) = &apos;Facebook&apos;), OR( text(Status) = &apos;New&apos;, AND( text(Status)=&apos;Open&apos; , OwnerId= &apos;00G2x000000eHT2&apos;)))</formula>
            <notifyCcRecipients>false</notifyCcRecipients>
            <senderEmail>do-not-reply@ccc.cyclecarriage.com.sg</senderEmail>
            <senderName>Customer Contact Centre</senderName>
            <template>Service_Cloud_Auto_Replies/SERVICE_CLOUD_Auto_reply_to_emails</template>
        </ruleEntry>
    </autoResponseRule>
</AutoResponseRules>
